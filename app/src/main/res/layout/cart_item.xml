<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp">

    <!--    layout Cart Item 1-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LayoutCartItem"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="8dp"
            android:background="@drawable/khungcartitem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <ImageView
                android:id="@+id/ivCartItem"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="8dp"
                android:scaleType="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCartNameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/ivCartItem"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCartShowSoLuong"
                android:text="Số lượng   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@id/ivCartItem"
                app:layout_constraintTop_toBottomOf="@id/tvCartNameItem" />

            <TextView
                android:id="@+id/tvCartSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@id/tvCartShowSoLuong"
                app:layout_constraintTop_toBottomOf="@id/tvCartNameItem" />


            <TextView
                android:id="@+id/tvCartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivCartItem"
                app:layout_constraintTop_toBottomOf="@id/tvCartSoLuong" />

            <ImageView
                android:id="@+id/btnXoaSP"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/baseline_delete_forever_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>