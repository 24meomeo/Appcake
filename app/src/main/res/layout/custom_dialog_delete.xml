<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:orientation="vertical"
    android:background="@drawable/rounddialog">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toprounddialog"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cập nhật mật khẩu"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnDialogXacNhan"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:backgroundTint="@color/texthome"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnDialogXoa"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Hủy"
            android:textColor="@color/white"
            android:backgroundTint="@color/texthome"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>