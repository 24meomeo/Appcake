    <LinearLayout
        android:id="@+id/layoutAddInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSP">
        <EditText
            android:id="@+id/edtTenSP"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Tên sản phẩm"
            android:textColor="@color/black"
            android:background="@drawable/edtbackground"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/edtLoaiSP"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:background="@drawable/edtbackground"
            android:hint="Loại"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/edtGiaSP"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Giá"
            android:background="@drawable/edtbackground"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/edtSoLuong"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Số lượng"
            android:background="@drawable/edtbackground"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/edtMoTa"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Mô tả"
            android:background="@drawable/edtbackground"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnThem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:textColor="@color/white"
        android:background="@drawable/roundcake"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutAddInfo"
        app:layout_constraintRight_toLeftOf="@id/btnHuy"/>

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundcake"
        android:text="Hủy"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnThem"
        app:layout_constraintTop_toBottomOf="@id/layoutAddInfo" />
